{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "generate": "cd ./packages/frontend && npm run generate",
    "build:frontend": "cd ./packages/frontend && npm run build",
    "be": "cd ./packages/backend && npm run start",
    "start:backend": "cd ./packages/backend && npm run start",
    "fe": "cd ./packages/frontend && npm run start",
    "start:frontend": "cd ./packages/frontend && npm run start",
    "start:frontend:prod": "cd ./packages/frontend && npm run start:prod"
  },
  "devDependencies": {
    "eslint": "5.13.0",
    "eslint-config-airbnb": "17.1.0",
    "eslint-plugin-import": "2.16.0",
    "eslint-plugin-jsx-a11y": "6.2.0",
    "eslint-plugin-react": "7.12.4",
    "husky": "1.3.1",
    "jest": "24.0.0",
    "lerna": "3.10.8",
    "lerna-changelog": "0.8.2",
    "lint-staged": "8.1.2",
    "prettier": "1.16.3",
    "puppeteer": "1.12.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,md,css,html}": [
      "prettier --trailing-comma es5 --single-quote --write",
      "git add"
    ]
  }
}
