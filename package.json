{
  "name": "react-boilerplate",
  "version": "0.1.0",
  "description": "A highly scalable, offline-first foundation with the best developer experience and a focus on performance and best practices.",
  "repository": {
    "type": "git",
    "url": "git://github.com/elandamor/react-boilerplate.git"
  },
  "author": "Thandolwethu Mpofu",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "react-scripts build",
    "commit": "npx git-cz",
    "generate": "react-scripts generate",
    "start": "cross-env NODE_ENV=development react-scripts start",
    "start:prod": "cross-env NODE_ENV=production react-scripts start",
    "test": "jest --watch"
  },
  "jest": {
    "roots": [
      "<rootDir>/app"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "lint-staged": {
    "**/*.{ts,tsx}": [
      "prettier --write",
      "tslint --fix",
      "git add"
    ]
  },
  "dependencies": {
    "apollo-cache-inmemory": "1.3.11",
    "apollo-client": "2.4.7",
    "apollo-link": "1.2.4",
    "apollo-link-error": "1.1.2",
    "apollo-link-http": "1.5.7",
    "apollo-link-state": "0.4.2",
    "apollo-link-ws": "1.0.10",
    "classnames": "2.2.6",
    "cloudinary-react": "1.0.6",
    "date-fns": "1.29.0",
    "fontfaceobserver": "2.0.13",
    "graphql": "14.0.2",
    "history": "4.7.2",
    "hoist-non-react-statics": "3.2.0",
    "howler": "2.0.15",
    "intl": "1.2.5",
    "react": "16.6.3",
    "react-apollo": "2.3.2",
    "react-dom": "16.6.3",
    "react-feather": "^1.1.5",
    "react-helmet": "5.2.0",
    "react-measure": "2.1.3",
    "react-router-dom": "4.3.1",
    "react-toastify": "4.4.3",
    "sanitize.css": "8.0.0",
    "styled-components": "4.1.1",
    "subscriptions-transport-ws": "0.9.15",
    "whatwg-fetch": "3.0.0"
  },
  "devDependencies": {
    "@types/howler": "2.0.5",
    "commitizen": "3.0.5",
    "jest": "^23.6.0",
    "jest-cli": "^23.6.0",
    "pd-react-scripts": "0.0.36"
  }
}
